{% comment %}
** Image with text - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% comment %} HTML markup {% endcomment %}
<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-12 section-content">
        {% if section.settings.icon_left != blank %}
        <div class="image-left" data-aos="zoom-in-right" data-aos-delay="300" data-aos-duration="1000">
            {% render 'image-element',
                          image: section.settings.icon_left,
                          additional_classes: 'image-with-text__image icon-left'
            %}
        </div>
        {% endif %}
      	<div class="section-inner">
          {% if section.settings.title != blank %}
          	<h2>{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.button_label != blank %}
            <div class="buttons">
              {% render 'button',
                          label: section.settings.button_label,
              href: section.settings.link,
              style: section.settings.button_style,
              type: "link"
              %}
            </div>
          {% endif %}
        </div>
        {% if section.settings.icon_left != blank %}
        <div class="image-right" data-aos="zoom-in-left" data-aos-delay="300" data-aos-duration="1000">
            {% render 'image-element',
                          image: section.settings.icon_right,
                          additional_classes: 'image-with-text__image icon-right'
            %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Recommendation",
  "class": "image-with-text image-with-text-1 home-recommendation",
  "settings": [
    {
      "type": "header",
      "content": "Section Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "options": 
      [
        {
          "value": "button--primary",
          "label": "Primary"
        },
        {
          "value": "button--secondary",
          "label": "Secondary"
        },
        {
          "value": "button--link-style",
          "label": "Link style"
        }
      ],
      "default": "button--primary"
    },
    {
      "type": "header",
      "content": "Section Image"
    },
    {
      "type": "image_picker",
      "id": "icon_left",
      "label": "Icon Left"
    },
    {
      "type": "image_picker",
      "id": "icon_right",
      "label": "Image Right"
    }
  ],
  "presets": [
    {
      "name": "Home Recommendation"
    }
  ]
}
{% endschema %}
