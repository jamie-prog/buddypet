                <div class="one-fourth column search-result__image-container small-down--one-whole">
                  <a href="{{ item.url }}" title="{{ item.title | escape }}">
                    {% render 'image-element',
                            image: item.featured_media.preview_image,
                            alt: item.featured_media.preview_image.alt
                    %}
                  </a>
                </div>
              {% elsif item.featured_image %}
                {% assign featured_image = true %}
                <div class="search-result__image-container">
                  <a href="{{ item.url }}" title="{{ item.title | escape }}">
                    {% render 'image-element',
                            image: item.featured_image,
                            alt: item.featured_image.alt
                    %}
                  </a>
                </div>
              {% endif %}

              <div class="search-result__description">
                
                {% if item.object_type == 'article' %}
                  <div class="blog_meta">
                    {% if section.settings.blog_author %}
                      {{ 'blogs.article.by_author' | t: author: item.author }}
                    {% endif %}

                    {% if section.settings.blog_date %}
                     {{ item.published_at | date: format: "month_day_year" }}
                    {% endif %}
                  </div>
                {% endif %}
                
                <h4 class="search-result__title">
                  <a href="{{ item.url }}" title="{{ item.title | escape }}">{{ item.title }}</a>
                </h4>

                {% if item.original_price %}
                  <div class="info">
                    <span class="price {% if WCItem_CompareAtPriceMax > item.original_price %}sale{% endif %}">
                      {% if item.available %}
                        {% if item.price_varies and WCItem_PriceMin > 0 %}
                          <small><em>{{ 'products.general.from' | t }}</em></small>
                        {% endif %}
                        {% if WCItem_PriceMin > 0 %}
                          <span class="money">
                            {% render 'price-element', price: WCItem_PriceMin %}
                          </span>
                        {% else %}
                          {{ settings.free_price_text }}
                        {% endif %}
                        {% if WCItem_CompareAtPriceMax > WCItem_Price %}
                          <span class="was-price">
                            <span class="money">
                              {% render 'price-element', price: WCItem_CompareAtPriceMax %}
                            </span>
                          </span>
                        {% endif %}
                      {% else %}
                        <span class="sold-out">{{ 'products.product.sold_out' | t }}</span>
                      {% endif %}
                    </span>
                  </div>
                {% endif %}

                

                {% if item.excerpt %}
                  <div class="excerpt">{{ item.excerpt | strip_html | truncate: 70 }}</div>
                {% else %}
                
                
                  <p>
                    {{ item.content | strip_html | truncatewords: 12 | highlight: search.terms | replace: 'Description', '' | replace: 'Specs', '' | replace: 'Shipping', '' | replace: 'Size', '' }}
                  </p>
                {% endif %}
              </div>
              </div>
            </div>
          {% endfor %}          
          {%- endcomment -%}
        </div>
