              {% endif %}
              <label for="q" class="visuallyhidden">{{ settings.search_placeholder }}</label>
              <div class="field">
                <div class="control has-icons-left is-relative">
                  {% if settings.enable_autocomplete == true %}
                    <ul class="predictive-results"></ul>
                  {% endif %}
