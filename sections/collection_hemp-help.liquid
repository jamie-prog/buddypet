<div data-section-type="hemp-help" data-section-id="{{section.id}}">
  {% if section.settings.title != blank %}
  <div class="section-title">
    {%- if section.settings.image != blank -%}
          <img src="{{section.settings.image |  img_url: 'master'}}" alt="">
     {% endif %}
    
    {% comment %}
    {% if section.settings.icon != blank %}
    <img src="{{ section.settings.icon }}" alt="{{section.settings.title}}" />
    {% endif %}
    {% endcomment %}
    
    <h4>{{section.settings.title}}</h4>
  </div>
  {% endif %}
  <div class="section-content">
    {% if section.blocks.size > 0 %}
      <ul class="navigation">
        {% for block in section.blocks %}
          {% if block.settings.title != blank %}
            <div class="item">
              {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
                {% endif %}
                <span>{{ block.settings.title }}</span>
                {% if block.settings.link != blank %}
              </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>
{% schema %}
  {
    "name": "What can hemp help with?",
    "settings": [
		{
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
      {
        "type": "url",
        "id": "icon",
        "label": "Icon"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
	], 
	"max_blocks":100,
    "blocks": [
      {
        "type": "link_list",
        "name": "Menu",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title" 
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link" 
          }
        ]
      }
    ]
  }
{% endschema %}

