{% comment %}
** Footer - classic - static **
- Static section
- Uses blocks
{% endcomment %}

{% assign id = section.id %}

{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{%- assign locale_selector = false -%}
{%- assign currency_selector = false -%}

{%- if section.settings.show_currency_selector == true and shop.enabled_currencies.size > 1 -%}
  {%- assign currency_selector = true -%}
{%- endif -%}

{%- if section.settings.show_locale_selector == true and shop.published_locales.size > 1 -%}
  {%- assign locale_selector = true -%}
{%- endif -%}

{% style %}
  {% render 'css-loop',
          css: custom_css,
          id: id
  %}
{% endstyle %}

{% comment %} HTML markup {% endcomment %}
<footer class="footer__container {{ css_class }}">
  <section class="footer__content
                  section
                  is-width-wide
                  has-background
                  has-padding-top">
    <div class="container is-justify-space-between">     

      <div class="footer__newsletter">
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            {% render 'social-icons' %}
          {% elsif block.type == 'link_list' %}
            {% render 'social-icons' %}
          {% elsif block.type == 'text' %}
            {% render 'social-icons' %}
          {% endif %}
        {% endfor %}
        
        {% if section.settings.newsletter_title != blank %}
        <a class="title-a" href="https://buddypet.co/account/register?view=buddypetcrew"><h2 class="footer__heading">{{ section.settings.newsletter_title }}</h2><a>
        {% endif %}
        {% if section.settings.newsletter_subtitle != blank %}
        	<h3>{{ section.settings.newsletter_subtitle }}</h3>
        {% endif %}

        {% render 'newsletter-form',
                      type: 'block',
        display_first_name: block.settings.display_first_name,
        placeholder: section.settings.newsletter_link_title,
        display_last_name: block.settings.display_last_name,
        email_placeholder: 'Your Email Address',
        submit_text: 'Sign Up'
        %}
        {% if section.settings.newsletter_link_title != blank %}
        	<a href="{{ section.settings.newsletter_link }}" >{{ section.settings.newsletter_link_title }}</a>
        {% endif %}
      </div>
      {%- comment -%}Trustpilot review collector widget{%- endcomment -%}
      <div class="tp-widget-collector--wrapper">
        <!-- TrustBox widget - Review Collector -->
        <div class="trustpilot-widget" data-locale="en-GB" data-template-id="56278e9abfbbba0bdcd568bc" data-businessunit-id="6233cb04c1f6d2e6e47b6cc9" data-style-height="52px" data-style-width="100%"  data-border-color="#666057" data-text-color="#666057">
          <a href="https://uk.trustpilot.com/review/buddypet.co" target="_blank" rel="noopener">Trustpilot</a>
        </div>
        <!-- End TrustBox widget -->
      </div>

      {% for block in section.blocks %}
        <div id="shopify-section-{{ block.id }}" class="footer__block block__{{ block.id }} block__{{ block.type | downcase | replace: '_', '-' }}
                    "
                    {{ block.shopify_attributes }}>
          {% if block.type == 'logo' %}
            {% comment %} Logo and text {% endcomment %}
            <div>
              <a href="{{ shop.url }}" title="{{ shop.name }}" class="footer__logo-wrapper has-padding-bottom is-{{ block.settings.size }}">
                {% if block.settings.logo %}
                  {% render 'image-element',
                          image: block.settings.logo,
                          alt: block.settings.logo.alt,
                          additional_classes: 'footer__logo'
                  %}
                {% else %}
                  <h2 class="footer__heading">{{ shop.name }}</h2>
                {% endif %}
              </a>
              {% if block.settings.text != blank %}
                {{ block.settings.text }}
              {% endif %}
            </div>

          {% elsif block.type == 'html' %}

            {{ block.settings.html_content }}

          {% elsif block.type == 'link_list' %}
            {% comment %} Menu {% endcomment %}
            {% render 'footer__menu', menu_link: block.settings.menu %}

          {% elsif block.type == 'text' %}
            {% comment %} Text {% endcomment %}
            {% if block.settings.title != blank %}
          <p class="footer__heading">{{ block.settings.title }}</p>
            {% endif %}
            {% if block.settings.content != blank %}
              {{ block.settings.content }}
            {% endif %}

          {% endif %}
        </div>
      {% endfor %}
    </div>
  </section>
  <section class="footer__extra-content section">
    <div class="container has-padding-top has-padding-bottom">
      {%- comment -%}
      {% if locale_selector or currency_selector or settings.show_multiple_currencies == true %}
        <div class="one-whole column">
          <div class="footer-menu__disclosure footer-classic__disclosure">
            {% render 'localization-switcher',
              additional_classes: 'footer-menu__disclosure is-hidden-medium is-hidden-mobile-only',
              id: 'footer__selector-form',
              currency_selector: currency_selector,
              locale_selector: locale_selector,
              show_currency: section.settings.show_currency_selector
            %}
            {% render 'localization-switcher-mobile',
              additional_classes: 'selectors-form--mobile is-hidden-desktop-only',
              currency_selector: currency_selector,
              locale_selector: locale_selector,
              show_currency: settings.show_currency_selector
            %}
          </div>
        </div>
      {% endif %}
      {%- endcomment -%}
      
      <div class="footer__credits">
        {% comment %}
          {% assign copyright_text = section.settings.copyright_text | newline_to_br | split: '<br />' %}
          {% for paragraph in copyright_text %}<p>{{ paragraph }}</p>{% endfor %}
        {% endcomment %}
        {{ section.settings.copyright_text }}
      </div>
      {% if section.settings.footer_paypal != blank %}
      <div class="footer__paypal">{{ section.settings.footer_paypal }}</div>
      {% endif %}
      {% if section.settings.display_payment_methods %}
        <div class="footer__payment-methods one-third column small-down--one-whole is-flex is-justify-end is-flex-wrap">
          <div class="payment-methods">
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class:'payment-icon' }}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
</footer>

